# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Swagger - UI
GET            /                                 controllers.Assets.at(path="/public/swagger-ui", file="index.html")

# Swagger - API documentation
GET            /api-docs                         controllers.ApiHelpController.getResources
GET            /api-docs/valuerecommender        controllers.ApiHelpController.getResource(path = "/valuerecommender")

# Home page
GET            /                                 controllers.Application.index()

# Value recommendations
POST           /recommend                        controllers.ValueRecommenderController.recommendValues()
GET            /has-instances                    controllers.ValueRecommenderController.hasInstances(template_id : String)

# For CORS - preflight request
OPTIONS        /*all                             controllers.Application.preflight(all)

## Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                     controllers.Assets.at(path="/public", file)
GET            /*file                            controllers.Assets.at(path="/public/swagger-ui", file)